#!/bin/sh

# Static Analysis Tests
mypy src/
isort --check src/
flake8 --max-line-length=120 src/
# Export variables accordingly to the operating system
if [[ "$OSTYPE" == "linux-gnu"* ]] || [[ "$OSTYPE" == "darwin"* ]]; then
  export PYTHONPATH="$PYTHONPATH:src/badges_gitlab"
elif [[ "$OSTYPE" == "cygwin" ]] || [[ "$OSTYPE" == "msys" ]]; then
  export PYTHONPATH="$PYTHONPATH;src/badges_gitlab"
fi
pylint -d C0301 --exit-zero src/
